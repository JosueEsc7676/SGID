                    <Label text="Gesti칩n de Documentos" styleClass="feature-title"/>
                    <Label text="Administre sus documentos e incapacidades" styleClass="feature-description"/>
                    <Button text="Acceder" styleClass="btn-feature" onAction="#abrirGestionDocumentos"/>
                </VBox>

                <VBox alignment="CENTER" spacing="10" styleClass="feature-card">
                    <Label text="Mis Datos" styleClass="feature-title"/>
                    <Label text="Actualice su informaci칩n personal" styleClass="feature-description"/>
                    <Button text="Acceder" styleClass="btn-feature" onAction="#abrirMisDatos"/>
                </VBox>

                <VBox alignment="CENTER" spacing="10" styleClass="feature-card">
                    <Label text="Reportes" styleClass="feature-title"/>
                    <Label text="Genere reportes y consultas" styleClass="feature-description"/>
                    <Button text="Acceder" styleClass="btn-feature" onAction="#abrirReportes"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- 游댳 FOOTER ORIGINAL (VAC칈O AHORA) -->
    <bottom>
