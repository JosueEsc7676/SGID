            <content>
                <VBox spacing="12" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>

                    <!-- Contenido centrado -->
                    <VBox alignment="CENTER" spacing="12" VBox.vgrow="ALWAYS">
                        <Label text="Men칰 Principal GDOC" styleClass="menu-title"/>
                        <Label fx:id="menuUserInfo" styleClass="menu-user-info"/>

                        <TitledPane text="REGISTROS PRINCIPALES/ESPECIALES" expanded="false" styleClass="centered-titled-pane">
                            <VBox spacing="6" alignment="CENTER">
                                <padding>
                                    <Insets top="5" right="5" bottom="5" left="5"/>
                                </padding>
                                <Button fx:id="btnRegistroDocente" onAction="#abrirRegistroDocente" text="Registro Docente"/>
                                <Button text="MATERNIDAD Y PATERNIDAD" styleClass="menu-item-centered" onAction="#abrirDashboard"/>
                                <Button text="DUELOS" styleClass="menu-item-centered" onAction="#abrirAccesosRapidos"/>
                                <Button text="TERAPIAS Y OTROS" styleClass="menu-item-centered" onAction="#abrirAccesosRapidos"/>
                                <Button text="SIN GOCE DE SUELDO" styleClass="menu-item-centered" onAction="#abrirAccesosRapidos"/>
                            </VBox>
                        </TitledPane>

                        <TitledPane text="FILTROS DE BUSQUEDA" expanded="false" styleClass="centered-titled-pane">
                            <VBox spacing="6" alignment="CENTER" fx:id="adminSecuritySection">
                                <padding>
                                    <Insets top="5" right="5" bottom="5" left="5"/>
                                </padding>
                                <Button text="Buscar por NIP" styleClass="menu-item-centered" onAction="#abrirBuscarNIP"/>
                                <Button text="Buscar por C칩digo INFRA" styleClass="menu-item-centered" onAction="#abrirBuscarINFRA"/>
                                <Button text="HISTORIAL MENSUAL" styleClass="menu-item-centered"/>
                            </VBox>
                        </TitledPane>

                        <TitledPane text="BASE DE DATOS" expanded="false" styleClass="centered-titled-pane">
                            <VBox spacing="6" alignment="CENTER">
                                <padding>
                                    <Insets top="5" right="5" bottom="5" left="5"/>
                                </padding>
                                <Button text="Importar Docentes (Excel / DBF)" styleClass="menu-item-centered" onAction="#abrirImportarBD"/>
                            </VBox>
                        </TitledPane>

                        <TitledPane text="CONFIGURACION DE LA CUENTA" expanded="false" styleClass="centered-titled-pane">
                            <VBox spacing="6" alignment="CENTER">
                                <padding>
                                    <Insets top="5" right="5" bottom="5" left="5"/>
                                </padding>
