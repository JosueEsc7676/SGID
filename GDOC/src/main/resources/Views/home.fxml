                <!-- Informaci칩n del usuario -->
                <VBox alignment="CENTER_RIGHT" spacing="5" HBox.hgrow="ALWAYS">
                    <Label fx:id="welcomeLabel" styleClass="welcome-text"/>
                    <Label fx:id="userInfoLabel" styleClass="user-info"/>
                    <Button fx:id="logoutButton" text="Cerrar Sesi칩n" styleClass="btn-logout" onAction="#logout"/>
