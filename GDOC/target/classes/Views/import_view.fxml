<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gidoc.gdoc.GDYBD.web.controllers.ImportController"
            stylesheets="@../styles/import.css"

            prefWidth="1000" prefHeight="600">

    <children>
        <VBox spacing="12" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">

            <!-- Fila superior con controles -->
            <HBox spacing="10">
                <Button text="Seleccionar Archivo" fx:id="seleccionarArchivoButton" onAction="#seleccionarArchivo"/>
                <Label fx:id="fileLabel" text="Ningún archivo seleccionado"/>
                <Button text="Importar" fx:id="importarButton" onAction="#importarDatos"/>
                <Button text="Actualizar" fx:id="actualizarButton" onAction="#actualizarDatos"/>
                <ProgressBar fx:id="progressBar" prefWidth="200" progress="0"/>
            </HBox>

            <!-- Nueva fila con botones de navegación -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Ir a Escuelas" onAction="#abrirVistaEscuelas"/>
                <Button text="Volver al Home" onAction="#volverAlHome"/>
            </HBox>

            <!-- Tabla de Docentes -->
            <TableView fx:id="tblDocentes" prefHeight="520">
                <columns>
                    <TableColumn text="ID" fx:id="colDocId"/>
                    <TableColumn text="Nombre" fx:id="colDocName"/>
                    <TableColumn text="Fecha Importación" fx:id="colDocImported"/>
                </columns>
            </TableView>

        </VBox>

        <!-- Overlay flotante con progreso y mensajes -->
        <StackPane fx:id="overlayPane" visible="false"
                   style="-fx-background-color: rgba(0,0,0,0.5);"
                   AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
                   AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

            <VBox alignment="CENTER" spacing="10"
                  style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: gray; -fx-border-radius: 10;">
                <Label fx:id="overlayLabel" text="Cargando base de datos..."
                       style="-fx-font-size: 18; -fx-text-fill: black;"/>
                <ProgressBar fx:id="overlayProgress" prefWidth="250" progress="0"/>
                <TextArea fx:id="overlayMessages" editable="false" wrapText="true" prefWidth="300" prefHeight="120"
                          style="-fx-font-size: 14; -fx-text-fill: black;"/>
            </VBox>

        </StackPane>

    </children>
</AnchorPane>
