<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="1000" stylesheets="@../styles/import.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gidoc.gdoc.GDYBD.web.controllers.ImportController">

    <children>

        <!-- Contenedor principal -->
        <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <!-- Header -->
            <HBox fx:id="headerBar" alignment="CENTER_LEFT" prefHeight="60" spacing="10" styleClass="header-bar">
                <Label styleClass="header-title" text="Gestion De Bases De Datos [Docentes]"/>
            </HBox>

            <!-- Selección de archivo -->
            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="section-container">
                <Button fx:id="seleccionarArchivoButton" text="Seleccionar Archivo" onAction="#seleccionarArchivo" styleClass="action-button"/>
                <Label fx:id="fileLabel" text="Ningún archivo seleccionado" styleClass="file-label"/>
                <Button fx:id="importarButton" text="Importar" onAction="#importarDatos" styleClass="action-button"/>
                <Button fx:id="actualizarButton" text="Actualizar" onAction="#actualizarDatos" styleClass="action-button"/>
            </HBox>

            <!-- Navegación -->
            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="section-container">
                <Button text="Volver al Home" onAction="#volverAlHome" styleClass="nav-button"/>
                <Button text="Ir a Escuelas" onAction="#abrirVistaEscuelas" styleClass="nav-button"/>
            </HBox>

            <!-- Tabla de Docentes -->
            <TableView fx:id="tblDocentes" editable="true" VBox.vgrow="ALWAYS" styleClass="data-table" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colDocId" text="ID" prefWidth="150" styleClass="table-column"/>
                    <TableColumn fx:id="colDocName" text="Nombre" prefWidth="400" styleClass="table-column"/>
                    <TableColumn fx:id="colDocImported" text="Fecha Importación" prefWidth="400" styleClass="table-column"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

        </VBox>

        <!-- Overlay flotante -->
        <StackPane fx:id="overlayPane" visible="false" style="-fx-background-color: rgba(0,0,0,0.5);" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
                <Label fx:id="overlayLabel" text="Cargando base de datos..." style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                <ProgressBar fx:id="overlayProgress" prefWidth="300" progress="0" style="-fx-accent: #4a86e8; -fx-pref-height: 8;"/>
                <TextArea fx:id="overlayMessages" editable="false" wrapText="true" prefHeight="150" prefWidth="350" style="-fx-font-size: 14; -fx-text-fill: #333333; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </VBox>
        </StackPane>

    </children>
</AnchorPane>
